          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "isOnboardingCompleted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "UserPreferencesDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "interestedCryptos": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "investorType": {
            "type": "string",
            "nullable": true
          },
          "preferredContentTypes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
